[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    migrations,
    build,
    dist
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator (black compatibility)
    F401,  # imported but unused (handled by IDE)
per-file-ignores =
    __init__.py:F401
